          "value": "16-9"
        },
        {
          "component": "text",
          "name": "customWidth",
          "label": "Width (px)",
          "description": "Custom width in pixels (when using Custom aspect ratio)",
          "valueType": "number",
          "value": "800",
          "condition": { "===": [{ "var": "aspectRatio" }, "custom"] }
        },
        {
          "component": "text",
          "name": "customHeight",
          "label": "Height (px)",
          "description": "Custom height in pixels (when using Custom aspect ratio)",
          "valueType": "number",
          "value": "450",
          "condition": { "===": [{ "var": "aspectRatio" }, "custom"] }
