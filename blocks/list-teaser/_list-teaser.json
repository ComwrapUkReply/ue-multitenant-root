{
  "definitions": [
    {
      "title": "List Teaser",
      "id": "list-teaser",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "List Teaser",
              "model": "list-teaser",
              "teasersTitleElement": "h3"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "list-teaser",
      "fields": [
        {
          "component": "select",
          "name": "list-teaser-type",
          "label": "Get Pages By",
          "valueType": "string",
          "options": [
            {
              "name": "Parent Page",
              "value": "parent_page"
            },
            {
              "name": "Individual Pages",
              "value": "individual_pages"
            },
            {
              "name": "Tag",
              "value": "tag"
            }
          ]
        },
        {
          "component": "aem-content",
          "name": "parent-page-link",
          "label": "Parent page",
          "value": "",
          "valueType": "string",
          "validation": {
            "rootPath": "/content/aemfeboot"
          },
          "condition": { "==": [{ "var": "list-teaser-type" }, "parent_page"] }
        },
        {
          "component": "aem-content",
          "valueType": "string",
          "name": "individual-pages-link",
          "label": "Individual pages link",
          "description": "Enter the paths of individual pages, without starting with a slash ('/').",
          "multi": true,
          "validation": {
            "rootPath": "/content/aemfeboot"
          },
          "condition": { "==": [{ "var": "list-teaser-type" }, "individual_pages"] }
        },
        {
          "component": "aem-tag",
          "name": "tag",
          "label": "tags",
          "value": "",
          "valueType": "string",
          "validation": {
            "rootPath": "/content/aemfeboot"
          },
          "condition": { "==": [{ "var": "list-teaser-type" }, "tag"] }
        },
        {
          "component": "tab",
          "name": "list-teasers",
          "label": "Teasers"
        },
        {
          "component": "select",
          "name": "teasersTitleElement",
          "label": "Teasers Title Type",
          "options": [
            { "...": "../../models/partials/_headings.json" }
          ]
        },
        {
          "component": "text",
          "name": "teasersLinkLabel",
          "label": "Teasers Link Label"
        },
        {
          "component": "select",
          "name": "classes_teaserColumns",
          "label": "Teaser Columns",
          "value": "list-teaser-columns-4",
          "options": [
            { "name": "1", "value": "list-teaser-columns-1" },
            { "name": "2", "value": "list-teaser-columns-2" },
            { "name": "3", "value": "list-teaser-columns-3" },
            { "name": "4", "value": "list-teaser-columns-4" }
          ]
        }
      ]
    }
  ],
  "filters": []
}
